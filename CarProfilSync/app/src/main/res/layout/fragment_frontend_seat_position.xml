<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".frontendMainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myImage"
            android:src="@drawable/sitz_kopflehne"
            android:layout_alignParentStart="true"
            android:paddingLeft="50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myImage2"
            android:src="@drawable/sitzflaeche2"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/myImage3"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="false"
            android:paddingLeft="70dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myImage3"
            android:src="@drawable/sitzlehne_drehbar"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myImage"
            android:paddingLeft="50dp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="2"
        android:layout_marginTop="20dp"
        android:background="@drawable/customborder"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seatPosX"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:textColor="#ff3c3c3c"
                android:textSize="18dp" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar4"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:minWidth="100dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seatHeadRest"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:textColor="#ff3c3c3c"
                android:textSize="18dp" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:minWidth="100dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seatPosBack"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textColor="#413c3c3c"
                android:textSize="18dp" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:minWidth="100dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seatPosHeight"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textColor="#4e3c3c3c"
                android:textSize="18dp" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:minWidth="100dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>
